@model CvSite.Models.Experience

@{
    ViewBag.Title = "CreateExperiences";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Tecrübe Bilgileri Ekle</h2>

@using (Html.BeginForm("CreateExperiences", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("İş Yeri Adı", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.expe_ad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.expe_ad, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("İş Yeri Link", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.expe_link, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.expe_link, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Bulunduğu Pozisyon", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.expe_pozisyon, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.expe_pozisyon, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Bulunduğu Şehir", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.expe_konum, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.expe_konum, "", new { @class = "text-danger" })
            </div>
        </div>

   

        <div class="form-group">
            @Html.Label("Giriş Tarihi", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.expe_giris_tarihi, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(model => model.expe_giris_tarihi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Çıkış Tarihi", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.expe_cikis_tarihi, new { htmlAttributes = new { @class = "form-control" ,type="date"} })
                @Html.ValidationMessageFor(model => model.expe_cikis_tarihi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tecrübe Ekle" class="btn btn-default" />
            </div>
        </div>
    </div>
}