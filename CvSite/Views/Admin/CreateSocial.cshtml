@model CvSite.Models.Social

@{
    ViewBag.Title = "CreateSocial";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sosyal Medya Ekle</h2>

@using (Html.BeginForm("CreateSocial", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Adı", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.sos_adi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sos_adi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Class Adı", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.sos_Class,(SelectList)ViewBag.Socials, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sos_Class, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("URL", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.sos_Url, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sos_Url, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sosyal Medya Ekle" class="btn btn-success" />
            </div>
        </div>
    </div>
}
